{
  "name": "read-git",
  "description": "A smart way to use Github",
  "homepage": "https://readgit.herokuapp.com/",
  "private": false,
  "scripts": {
    "build": "ionic-app-scripts build --release && npm run octokat",
    "watch": "ionic-app-scripts watch",
    "serve:before": "watch",
    "emulate:before": "build",
    "deploy:before": "build",
    "build:before": "build",
    "run:before": "build",
    "lint": "ionic-app-scripts lint",
    "octokat": "browserify github.js -o www/build/github.js",
    "heroku-postbuild": "sh deploy.sh",
    "livereload": "ionic run android --livereload --address 192.168.137.1 --device",
    "android": "cordova run android --buildConfig=.vscode/build.json",
    "release": "ionic run android --release --buildConfig=.vscode/build.json",
    "deeplink": "adb shell am start -a android.intent.action.VIEW -d 'github://github.com/prijindal/readGit'"
  },
  "dependencies": {
    "@ionic/storage": "^1.0.3",
    "@types/async": "^2.0.32",
    "async": "^2.0.1",
    "ionic-angular": "^2.0.0-rc.0",
    "ionic-native": "^2.0.3",
    "ionicons": "^3.0.0",
    "moment": "^2.15.1",
    "octokat": "^0.4.18",
    "x2js": "^3.0.0"
  },
  "devDependencies": {
    "@ionic/app-scripts": "^0.0.23",
    "browserify": "^13.1.0",
    "cordova": "^6.3.1",
    "ionic": "^2.1.0",
    "node-static": "^0.7.8",
    "typescript": "^2.0.3"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar",
    "ionic-plugin-keyboard",
    "cordova-plugin-nativeclicksound",
    "cordova-plugin-browsertab",
    "cordova-plugin-compat",
    {
      "id": "ionic-plugin-deeplinks",
      "locator": "ionic-plugin-deeplinks",
      "variables": {
        "URL_SCHEME": "github",
        "DEEPLINK_SCHEME": "https",
        "DEEPLINK_HOST": "github.com"
      }
    },
    "cordova-plugin-x-toast"
  ],
  "cordovaPlatforms": [
    {
      "platform": "android",
      "version": "",
      "locator": "android"
    },
    {
      "platform": "browser",
      "version": "",
      "locator": "browser"
    }
  ]
}
